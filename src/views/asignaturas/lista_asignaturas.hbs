    {{!-- <a class="navbar-brand" href="#">Navbar</a> --}}
    <div class="collapse navbar-collapse container" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link " href="/">Inicio</a>
            </li>

            {{#if (ifAdmin)}}
            <li class="nav-item">
                <a class="nav-link" href="/registrar_asignatura" target="_blank">Registrar asignatura</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/asignaturasOcultas" target="_blank">lista de asignaturas ocultas</a>
