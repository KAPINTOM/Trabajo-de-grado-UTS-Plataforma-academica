<div class="container">
    <br>
    <h2>Lista de asignaturas</h2>
    <hr>
    {{guardarAdmin administrador}}

    {{#each grados}}
    {{gradoActual grado}}


    <h3>{{grado}}</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Horas semanales</th>
                <th>Horas totales</th>
                <th>Docente</th>
                {{#if (ifAdmin)}}
                <th>Acciones</th>
                {{/if}}
            </tr>
        </thead>
        <tbody>
            {{#each ../asignaturas}}
            {{#if (ifVisible visible)}}
            {{#if (ifGradoActual grado)}}
            <tr>
                <td>{{nombre}}</td>
                <td>{{horas_semanales}}</td>
                <td>{{horas_totales}}</td>
                <td>{{docente}}</td>
                {{#if (ifAdmin)}}
                <td>
                    <abbr title="Editar asignatura: {{nombre}}">
                        <a href="/editar_asignatura/{{id}}" target="_blank" class="btn btn-secondary btn-block"><i
                                style='font-size:24px' class='fas'>&#xf044;</i></a>
                    </abbr>
                </td>
                {{/if}}
            </tr>
            {{/if}}
            {{/if}}
            {{/each}}
        </tbody>
    </table>

    {{/each}}

</div>