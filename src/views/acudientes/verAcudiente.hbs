<div class="vistaAcudiente table_list">
    <h2>Informacion del acudiente</h2>
    <hr>
    <h4>Nombre: {{acudiente.nombres}} {{acudiente.apellidos}}</h4>
    <div class="row">
        <div class="col">
            <h4>
                Documento: {{acudiente.documento}}
            </h4>
        </div>
        <div class="col">
            <h4>
                Telefono: {{acudiente.telefono}}
            </h4>
        </div>
        <div class="col">
            <h4>
                Parentesco: {{acudiente.parentesco}}
            </h4>
        </div>
        <div class="col">
            <h4>
                Correo: <a href="mailto:{{acudiente.correo}}">{{acudiente.correo}}</a>
            </h4>
        </div>
    </div>
    <hr>
    {{!-- Tabla de estudiantes relacionados con el acudiente --}}
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Documento</th>
                <th>Tipo de documento</th>
                <th>Fecha de nacimiento</th>
                <th>Sede</th>
                <th>Jornada</th>
                <th>Grado</th>
                <th>Grupo</th>
                <th>Telefono</th>
                <th>Correo</th>
                {{#if v}}
                <th>Accion</th>
                {{/if}}
                <th>Calificaciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each estudiante}}
            <tr>
                <td>{{nombres}}</td>
                <td>{{apellidos}}</td>
                <td>{{documento}}</td>
                <td>{{tipo_documento}}</td>
                <td>{{fecha_nacimiento}}</td>
                <td>{{sede}}</td>
                <td>{{jornada}}</td>
                <td>{{grado}}</td>
                <td>{{grupo}}</td>
                <td>{{telefono}}</td>
                <td>{{correo}}</td>
                {{#if ../v}}
                <td>
                    <abbr title="Editar estudiante">
                        <a href="/editar_matricula/{{documento}}" class="btn btn-secondary btn-block"><i
                                style='font-size:24px' class='fas'>&#xf044;</i></a>
                    </abbr>
                </td>
                {{/if}}
                <td>
                    <abbr title="Calificaciones del estudiante">
                        <a href="/calificaciones/{{documento}}" class="btn btn-secondary btn-block"><i
                                style='font-size:24px' class='fas'>&#xf328;</i></a>
                    </abbr>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>