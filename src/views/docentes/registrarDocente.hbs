<div class="container body_main body_form">
    <h2>
        Registrar docente
    </h2>
    <hr>
    <form action="/registrarDocente" method="post">
        <div class="row">
            {{!-- Columna 1 --}}
            <div class="col">
                <div class="form-group">
                    <label for="nombres">Nombres:</label>
                    <input type="text" class="form-control" name="nombres" placeholder="Nombres" autofocus>
                </div>
                <div class="form-group">
                    <label for="documento">Documento:</label>
                    <input type="text" class="form-control" name="documento" placeholder="Documento" autofocus>
                </div>
                <div class="form-group">
                    <label for="fecha_nacimiento">Fecha de nacimiento:</label>
                    <input type="date" class="form-control" name="fecha_nacimiento" placeholder="Fecha de nacimiento"
                        autofocus>
                </div>
                <div class="form-group">
                    <label for="correo">Correo electronico:</label>
                    <input type="email" class="form-control" name="correo" placeholder="Correo" autofocus>
                </div>
                <div class="form-group">
                    <label for="titulo">Titulo</label>
                    <input type="text" class="form-control" name="titulo" placeholder="Titulo del docente" autofocus>
                </div>
            </div>

            {{!-- Columna 2 --}}
            <div class="col">
                <div class="form-group">
                    <label for="apellidos">Apellidos:</label>
                    <input type="text" class="form-control" name="apellidos" placeholder="Apellidos" autofocus>
                </div>
                <div class="form-group">
                    <label for="telefono">Telefono:</label>
                    <input type="text" class="form-control" name="telefono" placeholder="Telefono" autofocus>
                </div>
                {{!-- Sede --}}
                <div class="form-group">
                    <label for="tipo_documento">Sede:</label>
                    <select class="form-control" name="sede" id="sede">
                        {{#each sede}}
                        <option value=" {{id}}">{{nombre}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="contraseña">Contraseña:</label>
                    <input type="password" class="form-control" name="contrasena" placeholder="Contraseña" autofocus>
                </div>
                {{!-- Administrador --}}
                <div class="form-group">
                    <label for="tipo_documento">Rango:</label>
                    <select class="form-control" name="administrador" id="administrador">
                        <option value="1">Administrador</option>
                        <option value="0" selected>Usuario</option>
                    </select>
                </div>
            </div>
        </div>
        <hr>
        <div class="form-group">
            <button class="btn btn-success btn-block">
                Matricular
            </button>
            <a href="/" class="btn btn-secondary btn-block">Cancelar</a>
        </div>
    </form>

</div>