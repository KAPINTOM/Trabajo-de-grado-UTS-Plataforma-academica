<div class="container body_main body_form">
    <h2>
        Editar docente
    </h2>
    <hr>
    <form action="/actualizarDocente/{{docente.documento}}" method="post">
        <div class="row">
            {{!-- Columna 1 --}}
            <div class="col">
                <div class="form-group">
                    <label for="nombres">Nombres:</label>
                    <input type="text" value="{{docente.nombres}}" class="form-control" name="nombres"
                        placeholder="Nombres" autofocus>
                </div>
                <div class="form-group">
                    <label for="documento">Documento:</label>
                    <input type="text" value="{{docente.documento}}" class="form-control" name="documento"
                        placeholder="Documento" autofocus>
                </div>
                <div class="form-group">
                    <label for="fecha_nacimiento">Fecha de nacimiento:</label>
                    <input type="date" value="{{fnac}}" class="form-control" name="fecha_nacimiento"
                        placeholder="Fecha de nacimiento" autofocus>
                </div>
                <div class="form-group">
                    <label for="correo">Correo electronico:</label>
                    <input type="email" value="{{docente.correo}}" class="form-control" name="correo"
                        placeholder="Correo" autofocus>
                </div>
                <div class="form-group">
                    <label for="titulo">Titulo</label>
                    <input type="text" value="{{docente.titulo}}" class="form-control" name="titulo"
                        placeholder="Titulo del docente" autofocus>
                </div>
            </div>

            {{!-- Columna 2 --}}
            <div class="col">
                <div class="form-group">
                    <label for="apellidos">Apellidos:</label>
                    <input type="text" value="{{docente.apellidos}}" class="form-control" name="apellidos"
                        placeholder="Apellidos" autofocus>
                </div>
                <div class="form-group">
                    <label for="telefono">Telefono:</label>
                    <input type="text" value="{{docente.telefono}}" class="form-control" name="telefono"
                        placeholder="Telefono" autofocus>
                </div>
                {{!-- Sede --}}
                <div class="form-group">
                    <label for="tipo_documento">Sede:</label>
                    <select class="form-control" name="sede" id="sede">
                        <optgroup label="Sede actual">
                            <option value="{{docente.sede}}" selected>{{sede_actual.nombre}}</option>
                        </optgroup>
                        <optgroup label="Seleccione una sede">
                            {{#each sede}}
                            <option value=" {{id}}">{{nombre}}</option>
                            {{/each}}
                        </optgroup>
                    </select>
                </div>
                <div class="form-group">
                    <label for="contraseña">Contraseña:</label>
                    <input type="password" value="{{docente.contrasena}}" class="form-control" name="contrasena"
                        placeholder="Contraseña" autofocus>
                </div>
                {{!-- Administrador --}}
                <div class="form-group">
                    <label for="tipo_documento">Rango:</label>
                    <select class="form-control" name="administrador" id="administrador">
                        <option value="{{docente.administrador}}" selected>{{rangoActual docente.administrador}}
                        </option>
                        <option value="{{ifRangoV docente.administrador}}">{{ifRango}}</option>
                    </select>
                </div>
            </div>
        </div>
        <hr>
        <div class="form-group">
            <button class="btn btn-success btn-block">
                Actualizar
            </button>
            <a href="/" class="btn btn-secondary btn-block">Cancelar</a>
        </div>
    </form>

</div>